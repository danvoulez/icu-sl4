# Builder
FROM rust:1.79-slim AS builder
WORKDIR /app
COPY . .
RUN apt-get update && apt-get install -y pkg-config libssl-dev && rm -rf /var/lib/apt/lists/*
RUN cargo build --release -p icu_sl4_http --locked

# Runtime
FROM debian:bookworm-slim
RUN useradd -m -u 10001 app && apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
USER app
WORKDIR /srv
COPY --from=builder /app/target/release/icu_sl4_http /srv/icu_sl4_http
EXPOSE 8787
ENTRYPOINT ["/srv/icu_sl4_http"]
